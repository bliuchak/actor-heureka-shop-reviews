{
    "title": "actor-heureka-shop-reviews",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "shopUrls": {
            "title": "Shop URLs",
            "type": "array",
            "description": "Shop URLs with reviews.",
            "editor": "stringList",
            "patternValue": "^(https?:\\/\\/(obchody\\.heureka\\.(cz|sk)|127\\.0\\.0\\.1:3000)\\/[a-z0-9-]+\\/recenze\\/overene)(\\?f=[2-9]\\d*)?(\\#filtr)?$",
            "prefill": ["https://obchody.heureka.cz/allegro-cz/recenze/overene"]
        },
        "maxShopReviews": {
            "title": "Max Shop Reviews",
            "type": "integer",
            "description": "Maximum number of reviews that can be collected per shop by this crawler.",
            "default": 20
        },
        "proxyGroups": {
            "title": "Proxy Groups",
            "type": "array",
            "description": "Proxy groups to use for this actor.",
            "editor": "stringList",
            "items": {
                "type": "string"
            }
        },
        "proxyCountry": {
            "title": "Proxy Country",
            "type": "string",
            "description": "Country of the proxies to use for this actor.",
            "editor": "textfield"
        }
    },
    "required": ["shopUrls", "maxShopReviews"]
}
